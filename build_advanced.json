{
	"source_dir": "tests/advanced/",
	"destination_dir": "build/advanced/",
	"headers": {
		"src1_header": "/* script, minified */",
		"src2_header": [
			"/* script2, minified",
			" * version: %version%",
			" * author: %author% (c) $YEAR$ */"
		]
	},
	"variables": {
		"src1_variables": {
			"testvars": [
				"TESTVAR1=true",
				"TESTVAR2=false"
			]
		}
	},
	"html": [
		"index.html",
		"index2.html",
		"nested/some.html"
	],
	"sources": [
		{
			"file": "src/script1.js",
			"output_file": "script1_renamed.min.js",
			"use_header": "src1_header",
			"use_variables": "src1_variables"
		},
		{
			"file": "src/script2.js",
			"use_header": "src2_header",
			"variables": {
				"debug": [
					"DEBUG=true"
				],
				"test": [
					"TESTVAR1=true",
					"TESTVAR2=false"
				]
			}
		},
		"src/script3.js",
		{
			"file": "src/script4.js",
			"header": [
				"/* inline",
				" * multiline",
				" * header */"
			],
			"preprocess": true
		}
	],
	"files": [
		"some_file.txt",
		"images/*.png",
		"data/*"
	]
}
