{
	"source_dir": "tests/test_advanced",
	"destination_dir": "build_advanced/",
	"headers": {
		"src1_header": "/* script, minified */",
		"src2_header": [
			"/* script2, minified",
			" * version: %version%",
			" * author: %author% */"
		]
	},
	"html": [
		"index.html",
		"index2.html",
		"nested/some.html"
	],
	"sources": [
		{
			"file": "src/script1.js",
			"use_header": "src1_header"
		},
		{
			"file": "src/script2.js",
			"use_header": "src2_header"
		},
		"src/script3.js",
		{
			"file": "src/script4.js",
			"header": [
				"/* inline",
				" * multiline",
				" * header */"
			]
		}
	],
	"files": [
		"some_file.txt",
		"images/*",
		"data/*"
	],
	"variables": {
		"debug": [
			"DEBUG=true"
		],
		"test": [
			"TESTVAR1=true",
			"TESTVAR2=false"
		]
	}
}
